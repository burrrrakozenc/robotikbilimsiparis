@using Entity2;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "OrderListAccountant";
    User currentUser = Session["currentUser"] as User;
    List<Order> orders = Query.OrderList();
    List<User> users = Query.UserList();
    List<Atelier> ateliers = Query.AtelierList();
    List<BasketProduct> basketProducts = Query.BasketProductList();
    List<Product> products = Query.ProductList();
}

<script src="~/Assets/js/CustomScript.js"></script>

<h3>Awaiting Submit for Accountant</h3>

<div class="kt-datatable kt-datatable--default kt-datatable--brand kt-datatable--loaded">
    <table class="kt-datatable__table" style="display: block; min-height: 500px;">
        <thead class="kt-datatable__head">
            <tr class="kt-datatable__row" style="left: 0px;">
                <th class="kt-datatable__cell"><span style="width: 70px;">Atolye (Kullanici)</span></th>
                <th class="kt-datatable__cell"><span style="width: 100px;">Siparis Tarihi</span></th>
                <th class="kt-datatable__cell"><span style="width: 100px;">Toplam Tutar</span></th>
                <th class="kt-datatable__cell"><span style="width: 80px;">Alici Onay</span></th>
                <th class="kt-datatable__cell"><span style="width: 80px;">Odeme Durumu</span></th>
                <th class="kt-datatable__cell"><span style="width: 80px;">Teslimat Durumu</span></th>
                <th class="kt-datatable__cell"><span style="width: 80px;">Muhasebe Onay</span></th>
                <th class="kt-datatable__cell"><span style="width: 10px;"></span></th>
            </tr>
        </thead>
        <tbody class="kt-datatable__body" style="">
            @foreach (var o in orders.Where(x => x.OrderStatus == false).ToList())
            {
            <tr class="kt-datatable__row" style="left: 0px;">
                <td class="kt-datatable__cell"><span style="width: 120px;">@ateliers.Find(a => a.ID == users.Where(u => u.ID == currentUser.ID).FirstOrDefault().AtelierID).Name (@users.Where(x => x.BasketID == o.BasketID).FirstOrDefault().FirstName)</span></td>
                <td class="kt-datatable__cell"><span style="width: 160px;">@o.CreatedOn</span></td>
                <td class="kt-datatable__cell"><span style="width: 120px;">@o.TotalPrice</span></td>
                <td class="kt-datatable__cell btn btn-bold btn-label-dark"><span style="width: 140px; @(o.UserSubmit ? "color:green" : "color:red")">@o.UserSubmit</span></td>
                <td class="kt-datatable__cell btn btn-bold btn-label-dark"><span style="width: 140px; @(o.PaymentStatus ? "color:green" : "color:red")">@o.PaymentStatus</span></td>
                <td class="kt-datatable__cell btn btn-bold btn-label-dark"><span style="width: 140px; @(o.DeliveryStatus ? "color:green" : "color:red")">@o.DeliveryStatus</span></td>
                <td class="kt-datatable__cell btn btn-bold btn-label-dark"><span style="width: 140px; @(o.AccountingStatus ? "color:green" : "color:red")">@o.AccountingStatus</span></td>
                <td class="kt-datatable__cell" style="overflow: visible; position: relative; width: 10px;">

                    <div>
                        <div class="dropdown">
                            <a data-toggle="dropdown" class="btn btn-sm btn-clean btn-icon btn-icon-md">									<i class="flaticon-more-1"></i>								</a>
                            <div class="dropdown-menu dropdown-menu-right" style="width:240px;">
                                <ul class="kt-nav">
                                    <li class="kt-nav__item"><button type="button" class="rounded btn" onclick="getProduct(@o.ID)"><i class="kt-nav__link-icon flaticon2-list-3"></i><span class="kt-nav__link-text">Siparisi Goruntule</span></button></li>
                                    <form class="accountantStatusForm">
                                        <input type="hidden" name="OrderID" id="OrderID" value="@o.ID" />
                                        <li class="kt-nav__item"><button type="submit" class="rounded btn"><i class="kt-nav__link-icon flaticon2-trash"></i><span class="kt-nav__link-text">Siparisi Onayla</span></button></li>
                                    </form>
                                    <form class="orderDeleteForm">
                                        <input type="hidden" name="OrderID" id="OrderID" value="@o.ID" />
                                        <li class="kt-nav__item"><button type="submit" class="rounded btn"><i class="kt-nav__link-icon flaticon2-trash"></i><span class="kt-nav__link-text">Siparisi Sil</span></button></li>
                                    </form>
                                    <li class="kt-nav__item"><button type="submit" style="text-align:left" data-toggle="modal" data-target="#kt_datepicker_modal@(o.ID)" class="rounded btn"><i class="kt-nav__link-icon flaticon-event-calendar-symbol"></i><span class="kt-nav__link-text">Tahmini Teslimat Tarihi</span></button></li>
                                    <form class="paymentReceived">
                                        <input type="hidden" name="OrderID" id="OrderID" value="@o.ID" />
                                        <li class="kt-nav__item"><button type="submit" class="rounded btn"><i class="kt-nav__link-icon flaticon2-trash"></i><span class="kt-nav__link-text">Odeme Tahsil Edildi</span></button></li>
                                    </form>

                                </ul>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>


<div class="modal fade" id="getProductModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <div class="modal-body">
                <table>
                    <thead>
                        <tr>
                            <th style="width: 150px;">Name</th>
                            <th style="width: 100px;">Adet</th>
                            <th style="width: 100px;">Tutar</th>
                        </tr>
                    </thead>
                    <tbody id="tableBody">
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

@foreach (var o in orders)
{
    <div class="modal fade" id="kt_datepicker_modal@(o.ID)" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-sm" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Bootstrap Date Picker Examples</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true" class="la la-remove"></span>
                    </button>
                </div>
                <form class="orderDateForm">
                    <div class="bootstrap-iso">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-6 col-sm-6 col-md-12">
                                    <!-- Form code begins -->
                                    <div class="form-group">
                                        <!-- Date input -->
                                        <label class="control-label">Date</label>
                                        <input type="hidden" name="OrderID" id="OrderID" value="@o.ID" />
                                        <span><input class="form-control col-lg-10" id="date" name="date" placeholder="MM/DD/YYY" type="date" /></span>
                                    </div>
                                    <!-- Form code ends -->
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-brand" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-secondary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}